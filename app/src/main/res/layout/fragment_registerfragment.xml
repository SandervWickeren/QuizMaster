<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorMainBackground"
    tools:context="com.sandervwickeren.quizmaster.Registerfragment">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_background"
        android:textColor="@color/colorTextDark"
        android:textColorHint="@color/colorLoginText" />

    <TextView
        android:id="@+id/error_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:text="Your name should have atleast one character!"
        android:textColor="@color/colorErrortext"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/colorTextDark"
        android:textColorHint="@color/colorLoginText" />

    <TextView
        android:id="@+id/error_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:text="Your password should be atleast 6 characters"
        android:textColor="@color/colorErrortext"/>

    <EditText
        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="10dp"
        android:hint="Repeat password"
        android:inputType="textPassword"
        android:textColor="@color/colorTextDark"
        android:textColorHint="@color/colorLoginText" />

    <TextView
        android:id="@+id/error_pass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:text="Your passwords don't match"
        android:textColor="@color/colorErrortext"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:shadowColor="@color/colorUnimportantButtonShadow"
            android:background="@drawable/unimportant_button_with_shadow"
            android:text="Back"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorLightBackground" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"

            android:text="Register"
            android:background="@drawable/button_with_shadow"
            android:textColor="@color/colorLightBackground" />
    </LinearLayout>

</LinearLayout>
