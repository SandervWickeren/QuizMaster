<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMainBackground"
    android:padding="20dp"
    tools:context="com.sandervwickeren.quizmaster.Loginfragment">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorTextDark"
        android:textColorHint="@color/colorLightBackground" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:background="@drawable/edittext_background"
        android:textColor="@color/colorTextDark"
        android:textColorHint="@color/colorLoginText" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:text="@string/login_error"
        android:textColor="@color/colorErrortext"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/unimportant_button"
            android:shadowColor="@color/colorUnimportantButtonShadow"
            android:layout_marginEnd="5dp"
            android:text="@string/register_button"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/colorLightBackground" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:background="@drawable/button"
            android:text="@string/login_button"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/colorLightBackground" />
    </LinearLayout>

</LinearLayout>
